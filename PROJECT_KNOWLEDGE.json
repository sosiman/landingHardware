  "backend_api": {
    "archivo": "backend/server.js",
    "puerto": 3001,
    "urlProduccion": "https://api.lockthard.es",

    "endpoints": {
      "GET /health": {
        "descripcion": "Health check del servidor",
        "respuesta": {"status": "ok", "timestamp": "ISO date"}
      },
      "GET /api/config": {
        "descripcion": "Verificar configuración API",
        "respuesta": {
          "openai_configured": "boolean",
          "model": "string",
          "image_model": "string",
          "codex_model": "string"
        }
      },
      "POST /api/chat": {
        "descripcion": "Chat general consultoría tecnológica",
        "modelo": "gpt-4o",
        "body": {
          "message": "string (requerido, max 2000 chars)",
          "conversationHistory": "array (opcional, últimos 10)"
        },
        "respuesta": {
          "reply": "string",
          "usage": {"prompt_tokens": "number", "completion_tokens": "number", "total_tokens": "number"}
        },
        "configuracion": {
          "temperature": 0.7,
          "max_tokens": 800
        }
      },
      "POST /api/chat/codex": {
        "descripcion": "Chat especializado desarrollo software",
        "modelo": "gpt-5.1-codex o gpt-4o",
        "body": {
          "message": "string (requerido, max 2000 chars)",
          "conversationHistory": "array (opcional, últimos 10)"
        },
        "respuesta": {
          "reply": "string (puede incluir bloques código markdown)",
          "usage": {"prompt_tokens": "number", "completion_tokens": "number", "total_tokens": "number"}
        },
        "configuracion": {
          "temperature": 0.5,
          "max_tokens": 1000
        },
        "systemPrompt": "Eres un asistente experto en desarrollo de software. Ayudas con código, arquitectura, debugging, mejores prácticas y soluciones técnicas. Responde de forma concisa, técnica y profesional. Proporciona ejemplos de código cuando sea apropiado."
      },
      "POST /api/generate-image": {
        "descripcion": "Generación de imágenes con DALL-E 3",
        "modelo": "dall-e-3",
        "body": {
          "prompt": "string (requerido, max 2000 chars)"
        },
        "respuesta": {
          "imageUrl": "string (URL temporal imagen generada)",
          "revisedPrompt": "string (prompt optimizado por OpenAI)"
        },
        "configuracion": {
          "model": "dall-e-3",
          "size": "1024x1024",
          "quality": "standard",
          "n": 1
        },
        "tiempoEspera": "20-60 segundos"
      }
    },

    "seguridad": {
      "cors": {
        "origenes_permitidos": [
          "https://lockthard.es",
          "http://localhost:3000",
          "http://localhost:5173"
        ],
        "metodos": ["GET", "POST"],
        "headers": ["Content-Type"]
